#!/usr/bin/make -f
# -*- makefile -*-
# deploy debian/rules that uses debhelper.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PREFIX := debian/deploy

build: build-stamp

build-stamp:
	dh_testdir
	python ./setup.py test
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -fr build dist deploy.egg-info
	rm -f build-stamp

	dh_clean *.pyc deploy/*.pyc

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

# Add here commands to install the package into debian/deploy.
	python setup.py install --no-compile --root=$(PREFIX)

	mv $(PREFIX)/usr/bin/deploy.py $(PREFIX)/usr/bin/deploy

# Build architecture-dependent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_link
	dh_compress
	dh_fixperms
	dh_pysupport
	chmod +x $(PREFIX)/etc/deploy/hooks/*
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep 
binary-arch:
.PHONY: build clean binary-indep binary install
